{
  "compilerOptions": {
    "outDir": "./dist",
    "emitDeclarationOnly": false,
    "declaration": true,
    "target": "esnext",
    "newLine": "LF",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "solid-js",
    "strict": true,
    "jsx": "preserve"
  },
  "include": [
    "./src"
  ],
  "exclude": ["node_modules"]
}
